{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2021",
    "lib": ["es2021"],
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["node"],
    "emitDeclarationOnly": false
  },
  "exclude": [
    "tests"
  ]
}
